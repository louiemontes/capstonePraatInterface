extends layout

block content
  span(class="centeringForm")
    h1 Welcome to the Web Prosodic Analyzer
    p Please login!

    form(method='POST', class='centeringForm', action='/login')
      p Username: 
        input(type='text', name='username', value=specificInputs[0], title='Enter your username.')
        span(class ="errors")   #{specificErrors[0]}
      p Password: 
        input(type='password', name='password', value=specificInputs[1], title='Enter your password.')
        span(class ="errors")   #{specificErrors[1]}
      span Login: 
      button(class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect", type='submit', title='Login')
        i(class="material-icons") person_outline
      br
      span Make Account: 
      a(class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect", href='/makeAccount', title='Make Account')
        i(class="material-icons") person_add

