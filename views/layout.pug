doctype html
html
  head
    title= title
    script(src="https://code.getmdl.io/1.3.0/material.min.js")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel="stylesheet", href="https://code.getmdl.io/1.3.0/material.grey-cyan.min.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
  body
    div(class="mdl-layout mdl-js-layout mdl-layout--fixed-header")
      header(class="mdl-layout__header")
        div(class="mdl-layout__header-row")
          span(class="mdl-layout-title") Prosodic Toolchain

          div(class="mdl-layout-spacer")
          nav(class="mdl-navigation mdl-layout--large-screen-only")
            a(class="mdl-navigation__link" href='/') 
              button(class="mdl-button mdl-js-button mdl-button--fab mdl-button--colored mdl-js-ripple-effect", type='submit', title='Submit your requests')
                i(class="material-icons") home
      div(class="mdl-layout__drawer")
        span(class="mdl-layout-title") Prosodic Toolchain
        nav(class="mdl-navigation")
         a(class="mdl-navigation__link" href="/") Logout
         a(class="mdl-navigation__link" href="https://www.cefns.nau.edu/capstone/projects/CS/2018/LingoPros/") Go to LingoPros

      main(class="mdl-layout__content")
        div(class="page-content")
          block content
